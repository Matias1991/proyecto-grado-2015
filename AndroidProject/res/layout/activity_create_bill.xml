<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidproject.CreateBill" >

    <EditText
        android:id="@+id/txtCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Código"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCode"
        android:layout_below="@+id/txtCode"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:maxLength="250" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerProjects"
        android:layout_centerHorizontal="true" >

        <EditText
            android:id="@+id/txtAmountWithoutIVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Importe sin IVA"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/txtTypeExchange"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Cotización"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerIVATypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="26dp"
        android:prompt="@string/ivaTypes" />

    <EditText
        android:id="@+id/txtAmountWithIVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerIVATypes"
        android:layout_below="@+id/spinnerIVATypes"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Importe IVA incl."
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/spinnerProjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/txtDescription"
        android:layout_marginTop="11dp"
        android:prompt="@string/projects" />

    <EditText
        android:id="@+id/txtDateApplied"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtAmountWithIVA"
        android:layout_below="@+id/txtAmountWithIVA"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Correspondiente al mes"
        android:inputType="date" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" >

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Crear"
            android:width="100dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Cancelar"
            android:width="100dp" />
    </LinearLayout>

</RelativeLayout>