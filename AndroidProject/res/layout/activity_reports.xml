<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Reports" >

    <Button
        android:id="@+id/btnLiquidations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnProjectInfo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:text="Información de la empresa" />

    <Button
        android:id="@+id/btnProjectInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLiquidations"
        android:layout_alignLeft="@+id/btnProjectsWithMoreEarningsDollar"
        android:layout_alignRight="@+id/btnProjectsWithMoreEarningsDollar"
        android:layout_marginBottom="35dp"
        android:text="Información de Proyectos" />

    <Button
        android:id="@+id/btnProjectsWithMoreEarningsPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnProjectsWithMoreEarnings"
        android:layout_alignRight="@+id/btnProjectsWithMoreEarnings"
        android:layout_below="@+id/btnProjectsWithMoreEarnings"
        android:layout_marginTop="34dp"
        android:text="Proy. $ con mayor ganancia" />

    <Button
        android:id="@+id/btnProjectsWithMoreEarningsDollar"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnProjectsWithMoreEarningsPeso"
        android:layout_below="@+id/btnProjectsWithMoreEarningsPeso"
        android:layout_marginTop="39dp"
        android:text="Proy. U$S con mayor ganancia" />
    
</RelativeLayout>